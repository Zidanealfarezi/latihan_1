<body>
    <div class="box">
        <h1>Hitung Nilai</h1>
        <form action="#">
            <input type="text" id="uts" placeholder="Nilai UTS">
            <br>
            <input type="text" id="tugas" placeholder="Nilai Tugas">
            <br>
            <input type="text" id="uas" placeholder="Nilai UAS">
            <br>
            <button id="submit">Submit</button>
            <br>
            <p>Nilai Huruf : <b id="huruf"></b></p>
            <br>
    </div>
    </form>
    <div class="box">
    <h1>Kalkulator BMI</h1>
        <form action="#">
            <input type="text" id="berat" placeholder="Berat Badan (Kg)">
            <br>
            <input type="text" id="tinggi" placeholder="Tinggi Badan (M)">
            <br>
            <button id="submit">Submit</button>
            <p>BMI : <b id="bmi"></b></p>
            <p>Kategori : <b id="kategori"></b></p>
        </form>
    </div>
    <script>
        let submit = document.getElementById("submit")

        submit.onclick = function() {
            let uts = document.getElementById("uts").value
            let tugas = document.getElementById("tugas").value
            let uas = document.getElementById("uas").value
            let huruf = document.getElementById("huruf")

            let total = parseInt(uts) * 0.3 + parseInt(tugas) * 0.4 + parseInt(uas) * 0.3

            if (total >= 80 && total <= 100){
                huruf.innerHTML = "A"
            }
            else if (total >= 70 && total < 80){
                huruf.innerHTML = "B"
            }
            else if (total >= 60 && total < 70){
                huruf.innerHTML = "C"
            }
            else if (total >= 40 && total < 60){
                huruf.innerHTML = "D"
            }
            else if (total < 40){
                huruf.innerHTML = "E"
            }
            else {
                huruf.innerHTML = "Error"
            }
        }

        let submit = document.getElementById("submit")

        submit.onclick = function() {
            let tinggi = document.getElementById("tinggi").value
            let berat = document.getElementById("berat").value
            let totalBmi = parseFloat(berat) / parseFloat(tinggi) ** 2
            let bmi = document.getElementById("bmi")
            let kategori = document.getElementById("kategori")

            if (totalBmi < 15) {
                bmi.innerHTML = totalBmi
                kategori.innerHTML = ("Berat badan sangat kurang")
            }
            else if (totalBmi >= 15 && totalBmi < 18.5) {
                bmi.innerHTML = totalBmi
                kategori.innerHTML = ("Berat badan kurang (Underweight)")
            }
            else if (totalBmi >= 18.5 && totalBmi < 24) {
                bmi.innerHTML = totalBmi
                kategori.innerHTML = ("Berat badan normal")
            }
            else if (totalBmi >= 24 && totalBmi <= 29) {
                bmi.innerHTML = totalBmi
                kategori.innerHTML = ("Kelebihan berat badan (Overweight)")
            }
            else if (totalBmi > 29) {
                bmi.innerHTML = totalBmi
                kategori.innerHTML = ("Obesitas")
            }
            else {
                kategori.innerHTML = ("Error")
            }
        }
    </script>
